<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.phoenix.happyheartsfund.DonateActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_5"
        android:id="@+id/button2"
        android:layout_marginTop="54dp"
        android:paddingBottom="5dp"
        android:textColor="#FFFFFF"
        android:background="#FF7701"
        android:onClick="openLinkPay5"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_10"
        android:id="@+id/button3"
        android:paddingBottom="5dp"
        android:layout_marginTop="49dp"
        android:textColor="#FFFFFF"
        android:background="#FF7701"
        android:onClick="openLinkPay10"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_20"
        android:id="@+id/button4"
        android:paddingBottom="5dp"
        android:background="#FF7701"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:onClick="openLinkPay20"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_other"
        android:id="@+id/button5"
        android:paddingBottom="5dp"
        android:layout_marginBottom="73dp"
        android:textColor="#FFFFFF"
        android:background="#FF7701"
        android:layout_marginTop="52dp"
        android:onClick="openLink"/>


</LinearLayout>
